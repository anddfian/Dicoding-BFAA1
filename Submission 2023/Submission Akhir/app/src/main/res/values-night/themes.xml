<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitHubUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.GitHubUser.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_githubuser</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/black</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.GitHubUser</item>
    </style>
    <style name="TextUser">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonUser">
        <item name="android:background">@color/black</item>
    </style>
    <style name="SCBSwitch">
        <item name="colorControlActivated">@color/white</item>
    </style>
    <style name="TabStyle">
        <item name="android:background">@color/black</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>
    <style name="ProgresBar">
        <item name="android:indeterminateTint">@color/white</item>
    </style>
</resources>